{
  "$schema": "https://tauri.app/schemas/2.0.0/capability.json",
  "identifier": "default",
  "description": "Default capabilities for PaperFuse Desktop",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "dialog:default",
    "dialog:allow-open",
    "shell:default",
    "shell:allow-open",
    "shell:allow-execute",
    "opener:default",
    "opener:allow-open-url",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-copy-file",
    "fs:allow-rename",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**" }]
    }
  ]
}
