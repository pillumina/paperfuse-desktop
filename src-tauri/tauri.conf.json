{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PaperFuse",
  "version": "0.1.0",
  "identifier": "com.paperfuse.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PaperFuse - Research Paper Discovery",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "fullscreen": false,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:1420 https://api.arxiv.org https://open.bigmodel.cn https://api.anthropic.com https://cdnjs.cloudflare.com ws://localhost:1421; img-src 'self' data: https:; font-src 'self' data:; worker-src 'self' blob: https://cdnjs.cloudflare.com;"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi"],
    "category": "public.app-category.education",
    "copyright": "Copyright (c) 2025 PaperFuse Contributors",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "14.0",
      "entitlements": null,
      "exceptionDomain": "",
      "providerShortName": null,
      "signingIdentity": "-"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "skipWebview": false
      }
    }
  }
}
